
<div class="container mt-5" style="max-width: 400px;">
  <h2 class="mb-4 text-center"><%= t('devise.passwords.new.title', default: 'Esqueceu sua senha?') %></h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "card p-4 shadow-sm" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="mb-3">
      <%= f.label :email, t('devise.passwords.new.email_label', default: 'E-mail'), class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
    <%= f.submit 'Redefinir senha', class: "btn btn-primary w-100" %>
  <% end %>
  <div class="mt-3 text-center d-flex justify-content-center gap-3">
    <%= link_to 'Entrar', new_user_session_path, class: 'text-primary' %>
    <span>|</span>
    <%= link_to 'Cadastre-se', new_user_registration_path, class: 'text-secondary' %>
  </div>
</div>
