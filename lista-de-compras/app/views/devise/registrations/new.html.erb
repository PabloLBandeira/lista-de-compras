
<div class="container py-5" style="max-width: 400px;">
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white text-center">
      <h2 class="mb-0">CADASTRE-SE</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mb-3" }) do |f| %>
        <% if resource.errors.any? %>
          <div class="alert alert-danger">
            <ul class="mb-0">
              <% resource.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="mb-3">
          <%= f.label :name, 'Nome', class: "form-label" %>
          <%= f.text_field :name, required: true, placeholder: 'Digite seu nome', class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :email, 'E-mail', class: "form-label" %>
          <%= f.email_field :email, required: true, placeholder: 'Digite seu e-mail', class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :password, 'Senha', class: "form-label" %>
          <%= f.password_field :password, required: true, placeholder: 'Mínimo 6 caracteres', class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :password_confirmation, 'Confirmação de senha', class: "form-label" %>
          <%= f.password_field :password_confirmation, required: true, placeholder: 'Confirme sua senha', class: "form-control" %>
        </div>
        <%= f.submit 'Cadastrar', class: "btn btn-primary w-100" %>
      <% end %>
      <div class="mt-3 text-center">
        <%= link_to "Já tem conta? Faça login", new_user_session_path, class: "text-primary" %>
      </div>
    </div>
  </div>
</div>
