<h1>Cadastrar novo usuário</h1>
<%= form_with model: @user do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "erro") %> impediram este usuário de ser salvo:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :name, 'Nome' %>
    <%= form.text_field :name, required: true, placeholder: 'Digite seu nome' %>
  </div>
  <div>
    <%= form.label :email, 'E-mail' %>
    <%= form.email_field :email, required: true, placeholder: 'Digite seu e-mail' %>
  </div>
  <div>
    <%= form.label :password, 'Senha' %>
    <%= form.password_field :password, required: true, placeholder: 'Mínimo 6 caracteres' %>
  </div>
  <div>
    <%= form.label :password_confirmation, 'Confirmação de senha' %>
    <%= form.password_field :password_confirmation, required: true, placeholder: 'Confirme sua senha' %>
  </div>
  <div>
    <%= form.submit 'Cadastrar' %>
  </div>
<% end %>
